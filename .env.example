# =====================================================
# DIBEA - Environment Variables Template
# =====================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file with real credentials!

# =====================================================
# SUPABASE
# =====================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database (para conexão direta, se necessário)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# =====================================================
# NEXT.JS (Frontend)
# =====================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=DIBEA
NODE_ENV=development

# =====================================================
# N8N
# =====================================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password

# Webhook URL
WEBHOOK_URL=https://your-n8n-domain.com

# =====================================================
# WHATSAPP (Twilio)
# =====================================================
WHATSAPP_ACCOUNT_SID=your_twilio_account_sid
WHATSAPP_AUTH_TOKEN=your_twilio_auth_token
WHATSAPP_FROM_NUMBER=whatsapp:+5511999999999

# Ou use Evolution API (alternativa gratuita)
# EVOLUTION_API_URL=http://localhost:8080
# EVOLUTION_API_KEY=your_evolution_api_key

# =====================================================
# OPENAI (ou outro LLM)
# =====================================================
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Alternativa: Anthropic Claude
# ANTHROPIC_API_KEY=your_anthropic_key
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =====================================================
# EMAIL (SendGrid, Resend, ou SMTP)
# =====================================================
# SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@dibea.com.br
SENDGRID_FROM_NAME=DIBEA

# Ou SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM=noreply@dibea.com.br

# =====================================================
# SMS (Twilio)
# =====================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+5511999999999

# =====================================================
# STORAGE (Supabase Storage ou S3)
# =====================================================
# Supabase Storage (padrão)
STORAGE_BUCKET_ANIMALS=animals
STORAGE_BUCKET_DOCUMENTS=documents
STORAGE_BUCKET_PRESCRIPTIONS=prescriptions

# Ou AWS S3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=dibea-storage

# =====================================================
# DIBEA CONFIG
# =====================================================
DEFAULT_MUNICIPALITY_ID=your_municipality_uuid_here
DEFAULT_MUNICIPALITY_NAME=Your Municipality Name

# Limites
MAX_ANIMALS_PER_TUTOR=5
MAX_APPOINTMENTS_PER_DAY=50
MAX_CAMPAIGN_ENROLLMENTS=200

# Features
ENABLE_WHATSAPP_BOT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true

# =====================================================
# MONITORING & LOGGING
# =====================================================
# Sentry (opcional)
# SENTRY_DSN=your_sentry_dsn
# SENTRY_ENVIRONMENT=development

# LogTail (opcional)
# LOGTAIL_SOURCE_TOKEN=your_logtail_token

# =====================================================
# SECURITY
# =====================================================
# JWT Secret (para tokens customizados, se necessário)
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://dibea.com.br

# =====================================================
# DEVELOPMENT
# =====================================================
DEBUG=false
LOG_LEVEL=info

# Seed data
SEED_DATABASE=false

