{
  "name": "dibea-monorepo",
  "version": "1.0.0",
  "description": "DIBEA - Sistema de GestÃ£o de Bem-Estar Animal Municipal",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:public": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run tunnel:start\"",
    "dev:backend": "npm run dev --workspace=@dibea/backend",
    "dev:frontend": "npm run dev --workspace=@dibea/frontend",
    "tunnel:start": "node scripts/start-tunnel.js",
    "tunnel:stop": "node scripts/stop-tunnel.js",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=@dibea/backend",
    "build:frontend": "npm run build --workspace=@dibea/frontend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "db:migrate": "npm run db:migrate --workspace=@dibea/backend",
    "db:seed": "npm run db:seed --workspace=@dibea/backend",
    "db:studio": "npm run db:studio --workspace=@dibea/backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:build": "docker-compose build",
    "docker:clean": "docker-compose down -v && docker system prune -f"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Equipe Dibea",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
